@model Enum
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Sections</li>
    </ol>
</nav>

<h2>Forums</h2>

@if (ViewBag.AdaugareSectiuni == true)     @* daca e true atunci este ADMIN *@
{
    <a class="btn btn-outline-success" href="/Sections/New/">Add new section</a> @*trebuie mutat asta*@
}
<a class="btn btn-outline-success" href="/Forums/New/">Add new forum</a>

<br />
<br />
@foreach (var sect in ViewBag.Sections)
{
    @if(sect.SectionType == 0)                            // daca sectiunea este public
    {
        <div class="card">
            <div class="card-body">
                <h3 class="card-title"><a style="text-decoration:none; color:black" href="/Sections/Show/@sect.Id">@sect.SectionName</a></h3>

                @foreach (ForumApp.Models.Forum forum in sect.Forums)
                {
                    @if(forum.ForumType == 0)             // daca forumul este public
                    {
                        <partial name="ForumInfo" model="forum"></partial>
                    }
                    
                }
            </div>
        </div>
        <br />
    }
}